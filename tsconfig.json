{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "experimentalDecorators": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "lib": ["es6", "dom"],
      "outDir": "lib",
      "rootDir": "src"
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "**/*.test.ts"]
}
